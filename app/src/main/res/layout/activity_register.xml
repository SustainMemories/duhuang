<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".registerActivity">
    <ImageView
            android:layout_width="1000dp"
            android:layout_height="1000dp"
            android:src="@drawable/bhll"
            android:layout_marginTop="360dp"
            android:layout_marginLeft="-400dp"/>
    <ImageView
            android:id="@+id/imageView6"
            android:layout_width="700dp"
            android:layout_height="803dp"
            android:layout_marginLeft="-20dp"
            android:layout_marginTop="-20dp"
            android:background="@drawable/white" />
    <ImageView
            android:layout_width="280dp"
            android:layout_height="75dp"
            android:background="@drawable/ziti"
            android:layout_marginTop="110dp"
            android:layout_gravity="center_horizontal"/>
    <ImageView
            android:id="@+id/imageView7"
            android:layout_width="380dp"
            android:layout_height="331dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-10dp"
            android:background="@drawable/lianhua" />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="300dp">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请填写相关信息注册"
                android:gravity="center"
                android:textColor="#7E6852"
                android:layout_marginTop="20dp"
                android:textSize="20sp"/>
        <EditText
                android:id="@+id/edit_dl1"
                android:layout_width="430dp"
                android:layout_height="64dp"
                android:hint="请输入用户名"
                android:textColor="#675c51"
                android:background="@drawable/btnstyle1"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal"
                android:textSize="26sp"/>
        <EditText
                android:id="@+id/edit_dl2"
                android:layout_width="430dp"
                android:layout_height="64dp"
                android:hint="请输入密码"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textColor="#675c51"
                android:inputType="numberPassword"
                android:textSize="26sp"
                android:background="@drawable/btnstyle1"
                android:layout_marginTop="27dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="36dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_gravity="center"
        >

            <Button
                    android:id="@+id/button_dl1"
                    android:layout_width="205dp"
                    android:layout_height="66dp"
                    android:layout_marginLeft="20dp"
                    android:background="#C9BCAC"
                    android:text="注册"
                    android:textColor="#fff"
                    android:textSize="30dp" />

            <Button
                    android:id="@+id/button_dl2"
                    android:layout_width="205dp"
                    android:layout_height="66dp"
                    android:text="登录"
                    android:textSize="30dp"
                    android:textColor="#fff"
                    android:background="#C5986E"
                    android:layout_marginLeft="20dp"
            />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>




