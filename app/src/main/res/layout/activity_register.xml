<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bhll"
        tools:context=".registerActivity">
    <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="755dp"
            android:background="@drawable/white" />
    <ImageView
            android:layout_width="280dp"
            android:layout_height="75dp"
            android:background="@drawable/ziti"
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal"/>
    <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="211dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:background="@drawable/lianhua" />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="300dp">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请输入用户信息"
                android:gravity="center"
                android:textSize="22sp"/>
        <EditText
                android:id="@+id/edit_dl1"
                android:layout_width="430dp"
                android:layout_height="54dp"
                android:hint="请输入用户名"
                android:textColor="#675c51"
                android:background="@drawable/btnstyle1"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:textSize="28sp"/>
        <EditText
                android:id="@+id/edit_dl2"
                android:layout_width="430dp"
                android:layout_height="54dp"
                android:hint="请输入密码"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textColor="#675c51"
                android:inputType="numberPassword"
                android:textSize="28sp"
                android:background="@drawable/btnstyle1"
                android:layout_marginTop="16dp"/>
        <CheckBox
                android:id="@+id/check_dl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="记住密码"
                android:textSize="20sp"
                android:layout_gravity="right"
                android:textColor="#675c51"
                android:layout_margin="20dp"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_gravity="center"
        >

            <Button
                    android:id="@+id/button_re1"
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:layout_weight="1"
                    android:background="#C9BCAC"
                    android:text="返回"
                    android:textColor="#fff"
                    android:textSize="30dp" />

            <Button
                    android:id="@+id/button_re2"
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:text="注册"
                    android:textSize="30dp"
                    android:textColor="#fff"
                    android:background="#C5986E"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>




